{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "VSPreview",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/run.py",
            "console": "integratedTerminal",
            "args": [
                "${workspaceFolder}/tests/script.vpy"
            ],
            "showReturnValue": true,
            "subProcess": true,
        },
        {
            "name": "VSP Current File",
            "type": "python",
            "request": "launch",
            "console": "integratedTerminal",
            "program": "${workspaceFolder}/run.py",
            "args": [
                "${file}"
            ],
            "showReturnValue": true,
            "subProcess": true,
        },
        {
            "name": "Current File",
            "type": "python",
            "request": "launch",
            "console": "integratedTerminal",
            "program": "${file}",
            "showReturnValue": true,
            "subProcess": true,
        }
